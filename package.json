{
  "name": "network-scanner",
  "main": "public/electron.js",
  "version": "1.0.0",
  "scripts": {
    "dev": "concurrently \"npm run start-frontend\" \"npm run electron\"",
    "start-frontend": "react-scripts start",
    "build-frontend": "react-scripts build",
    "build": "npm run build-frontend && electron-builder",
    "dist": "electron-builder",
    "electron": "cross-env NODE_ENV=development electron .",
    "start-backend": "node src/server.js",
    "start": "npm run electron",
    "build:windows": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build-mac": "electron-builder --mac",
    "build:all": "electron-builder --win --linux"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "browser-fs-access": "^0.35.0",
    "cors": "^2.8.5",
    "electron-is-dev": "^3.0.1",
    "express": "^4.17.1",
    "ini": "^5.0.0",
    "node-fetch": "^3.3.2",
    "node-nmap": "^4.0.0",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "ping": "^0.4.4",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "xml2js": "^0.6.2",
    "xmldom": "^0.6.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.26.3",
    "babel-loader": "^9.2.1",
    "concurrently": "^9.1.1",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "electron": "^31",
    "electron-builder": "^25.1.8",
    "html-webpack-plugin": "^5.6.3",
    "react-scripts": "^5.0.1",
    "style-loader": "^4.0.0",
    "webpack": "^5.97.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.0",
    "webpack-node-externals": "^3.0.0"
  },
  "build": {
    "appId": "com.networkscanner.myapp",
    "productName": "Network Scanner App",
    "asar": false,
    "directories": {
      "output": "dist"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
